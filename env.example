# EDITH-QA Environment Variables

# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED API KEYS
# =============================================================================

# OpenAI API Key (for GPT-4 planning)
OPENAI_API_KEY=sk-proj-your-openai-key-here

# Anthropic API Key (for Claude/Agent-S2)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# =============================================================================
# OPTIONAL API KEYS
# =============================================================================

# Hugging Face Token (for UI-TARS models)
HF_TOKEN=hf_your-huggingface-token-here

# Google Gemini API Key (alternative to OpenAI)
GEMINI_API_KEY=your-gemini-key-here

# Azure OpenAI API Key (if using Azure)
AZURE_OPENAI_API_KEY=your-azure-key-here
AZURE_OPENAI_API_BASE=https://your-resource.openai.azure.com/

# =============================================================================
# CONFIGURATION
# =============================================================================

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=logs

# Screenshot Configuration
SCREENSHOT_DIR=images
SCREENSHOT_FORMAT=PNG

# Performance Configuration
MAX_EXECUTION_TIME=300
STEP_DELAY=1.0
MAX_RETRIES=3

# =============================================================================
# AGENT-S CONFIGURATION
# =============================================================================

# Agent-S2 Model Configuration
AGENT_S_PROVIDER=anthropic
AGENT_S_MODEL=claude-3-7-sonnet-20250219
AGENT_S_GROUNDING_PROVIDER=anthropic
AGENT_S_GROUNDING_MODEL=claude-3-7-sonnet-20250219
AGENT_S_GROUNDING_WIDTH=1366

# Action Space: pyautogui, accessibility
AGENT_S_ACTION_SPACE=pyautogui

# Observation Type: screenshot, mixed, accessibility_tree
AGENT_S_OBSERVATION_TYPE=mixed

# Search Engine: Perplexica, None
AGENT_S_SEARCH_ENGINE=Perplexica

# Embedding Engine: openai, gemini
AGENT_S_EMBEDDING_ENGINE=openai

# =============================================================================
# ANDROID WORLD CONFIGURATION
# =============================================================================

# Android Emulator Configuration
ANDROID_EMULATOR_NAME=AndroidWorldAvd
ANDROID_CONSOLE_PORT=5554
ANDROID_ADB_PATH=

# Task Configuration
ANDROID_SUITE_FAMILY=android_world
ANDROID_N_TASK_COMBINATIONS=1
ANDROID_TASK_RANDOM_SEED=30

# Performance Settings
ANDROID_TRANSITION_PAUSE=0.2
ANDROID_MAX_STEPS_PER_TASK=50

# =============================================================================
# PERPLEXICA CONFIGURATION
# =============================================================================

# Perplexica Search Engine
PERPLEXICA_URL=http://localhost:3000/api/search
PERPLEXICA_TIMEOUT=30
PERPLEXICA_MAX_RETRIES=3

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Security Settings
ENABLE_SECURITY_SCAN=true
MAX_SCREENSHOT_SIZE=10
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Debug Settings
DEBUG=false
ENABLE_PROFILING=false
ENABLE_MEMORY_MONITORING=false

# Test Configuration
TEST_TIMEOUT=60
PARALLEL_TESTS=false
TEST_DATA_DIR=test_data
COVERAGE_THRESHOLD=80

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Docker Settings (if using Docker)
DOCKER_BUILDKIT=1
COMPOSE_PROJECT_NAME=edith-qa

# =============================================================================
# EXAMPLES
# =============================================================================

# Example values (DO NOT USE IN PRODUCTION)
# OPENAI_API_KEY=sk-proj-1234567890abcdef...
# ANTHROPIC_API_KEY=sk-ant-1234567890abcdef...
# HF_TOKEN=hf_1234567890abcdef...

# =============================================================================
# NOTES
# =============================================================================

# 1. Never commit this file with real API keys
# 2. Use environment variables in production
# 3. Rotate API keys regularly
# 4. Monitor API usage and costs
# 5. Use different keys for development and production
